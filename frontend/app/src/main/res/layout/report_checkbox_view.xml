<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/reprot_checkbox_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="15dp">

    <TextView
        android:id="@+id/report_checkBox_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Check box"
        android:textColor="@color/black"
        android:textSize="@dimen/normal_textsize" />

    <LinearLayout
        android:id="@+id/report_checkbox_containter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/report_checkbox_checked_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#002196F3"
                android:backgroundTint="#0003A9F4"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:srcCompat="@drawable/ic_checkbox_checked" />

            <TextView
                android:id="@+id/report_checkbox_checked_label"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="Checked"
                android:textSize="@dimen/normal_textsize" />

            <TextView
                android:id="@+id/report_checkbox_checked_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="@dimen/normal_textsize"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/report_checkbox_unchecked_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#002196F3"
                android:backgroundTint="#0003A9F4"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:srcCompat="@drawable/ic_checkbox_unchecked" />

            <TextView
                android:id="@+id/report_checkbox_unchecked_label"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="Unchecked"
                android:textSize="@dimen/normal_textsize" />

            <TextView
                android:id="@+id/report_checkbox_unchecked_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="@dimen/normal_textsize"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
